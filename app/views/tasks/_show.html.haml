.row<
  .seven.columns.title= @task.title
  .three.columns.offset-by-two.text-right= task_status_tag(@task)
.row<
  .two.columns= @task.project.name
  - if @task.story.present?
    .two.end.columns= @task.story.service.abbreviation
.row<
  .four.columns.offset-by-eight.text-right
    = link_to 'Edit', edit_task_path(@task)
    \|
    = link_to 'Delete', @task, method: :delete, data: { confirm: "WARNING: Are you sure you want to delete this task?" }
    \|
    = link_to 'Back', tasks_path
