- task ||= @task
- description = task.description.present? ? task.description : t(:no_details_html, scope: [:activerecord, :labels, :task])

.row.section<
  .seven.columns.title= task.title
  .three.columns.offset-by-two.text-right= task_status_tag(task)
.row.section
  .eleven.columns.description= description
.row<
  .two.columns= task.project.name
  - if task.story.present?
    .two.end.columns= task.story.service.abbreviation
  .three.columns.end
    .points<
      - ((Task::POINTS_MINIMUM+1)..Task::POINTS_MAXIMUM).each do |point|
        %span<
          %i.small.glyphicon{class: point <= (task.points || -1) ? 'star' : 'dislikes'}
.row<
  .four.columns.offset-by-eight.text-right.actions
    = link_to 'Edit', edit_task_path(task)
    \|
    = link_to 'Delete', task, method: :delete, data: { confirm: "WARNING: Are you sure you want to delete this task?" }
    \|
    = link_to 'Back', tasks_path
