- possible_points = Task::POINTS[1,Task::POINTS.length]
- editable = true unless defined?(editable)
- task ||= @task

- if editable
  .points><
    .overlay{class: points_to_class(task.points)}><
      - possible_points.each do |points|
        %span.badge.badge-inverse{data: {points: points}}><= points
    - possible_points.each do |points|
      %span.badge.badge-inverse.disabled{data: {points: points}}><= points
- else
  .points><
    - possible_points.each do |points|
      %span.badge.badge-inverse{class: task.points < points ? 'disabled' : nil, data: {points: points}}><= points
