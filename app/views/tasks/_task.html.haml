- edited ||= []
- expanded ||= []
- printing = false if printing.nil?
- stand_alone = printing if stand_alone.nil?
- style = :cards if style.nil?
- task ||= @task
- options = {remote: true}
- options[:disabled] = 'disabled' if task.completed?
- id = task.new_record? ? 'new' : task.id
- classes = 'task '
- classes << style.to_s if printing
- classes << ' edit-mode' if @edited.include?(id)
- data = {status: task.status, expanded: @expanded.include?(id) ? 1 : 0}
- data[:print] = 1 if printing
- data[:draggable] = 1 if can? :drag, task
- row_classes = @expanded.include?(id) || stand_alone ? 'expanded' : 'compact'
- show_rank = false if show_rank.nil?

= content_tag stand_alone ? 'div' : 'li', {id: "Task_#{id}", class: classes, data: data} do
  - if printing
    - if style == :cards
      .row-fluid
        .span12
          .title= task.to_s
      .row-fluid
        .span8
          .project= "#{task.project.name} &mdash; #{pluralize(task.points, 'Point')}".html_safe
        .span4.text-right
          = t(task.status, scope: [:activerecord, :labels, :task])
      .row-fluid
        .span12
          .description= task.description
      .row-fluid
        .span12
          .footer
            .row-fluid
              .span6
                - if task.story.present? && task.story.contact_us_number.present?
                  .contact-us= "CU# #{task.story.contact_us_number}"
              .span6
                - if iteration.present?
                  .release-date= iteration.end_date.to_date.to_s(:medium)
    - else
      .row-fluid
        .span8
          .title= task.to_s
        .span4.text-right
          = "#{pluralize(task.points, 'Point')} &mdash; #{t(task.status, scope: [:activerecord, :labels, :task])}".html_safe
      .row-fluid
        .span8
          .project= task.project.name
        .span4.text-right
          - if task.story.present? && task.story.contact_us_number.present?
            .contact-us= "CU# #{task.story.contact_us_number}"
      - if task.description.present?
        .row-fluid
          .span12
            .description= task.description


  - else
    .row{class: row_classes}
      .span8

        - if edited.include?(id)
          = render partial: 'edit', locals: {task:task, remote:true, stand_alone: false}

        - elsif expanded.include?(id)
          %form
            .row-fluid
              .span12
                .clearfix{class: task.status}
                  .row-fluid.section
                    .span9
                      %label= 'Title'
                      .title= task.title
                    .span3
                      %div{style:'display:inline-block;'}
                        %label= 'Status'
                        .title= t(task.status, scope: [:activerecord, :labels, :task])
                      .command-block{class: stand_alone ? 'hidden' : nil}
                        - if can? :destroy, task
                          = awesome_link_to '', task_path(task), glyph: 'awesome-remove', data: {confirm: "WARNING: Are you sure you want to delete this task?", method: :delete}, remote: true
                        - if can? :edit, task
                          = awesome_link_to '', edit_task_path(task), glyph: 'awesome-edit', remote:true
                        = awesome_link_to '', task_path(task), glyph: 'awesome-eye-close', remote:true
                  - if task.story.present?
                    .row-fluid.section
                      .span12
                        %label= 'Story'
                        .title
                          = link_to task.story.to_s, story_path(task.story.id)
                          - if task.story.contact_us_number.present?
                            &mdash;
                            %a.contact-us{href: task.story.contact_us_link, target: '_blank'}="CU ##{task.story.contact_us_number}"
                  - if task.description.present?
                    .row-fluid.section
                      .span12
                        %label= 'Description'
                        .description= task.description
                  .row-fluid
                    .span6
                      %label= 'Project'
                      .project= task.project.name
                    .span3
                      %label= 'Points'
                      = render partial: 'points', locals: {task: task, editable: true}
                    .span3
                      - if task.story.present? && task.story.release_date.present?
                        %label= 'Release Date'
                        .release-date
                          =task.story.release_date.to_date.to_s(:medium)
                      - else
                        %label= '&nbsp;'.html_safe
                        .release-date= '&nbsp;'.html_safe

        - else
          .row-fluid
            .span12
              .clearfix{class: task.status}
                .row-fluid
                  .span6
                    .title.has-tooltip{title: task.project.name}
                      = task.story.present? ? link_to(task.to_s, story_path(task.story.id)) : task.to_s
                  .span3
                    = render partial: 'points', locals: {task: task, editable: true}
                    - if show_rank
                      = task.rank
                  .span3.text-right
                    .release-date=task.story.release_date.to_date.to_s(:medium) if task.story.present? && task.story.release_date.present?
                    .command-block.on-hover
                      - if can? :edit, task
                        = awesome_button_to 'Advance', url_for(controller: :tasks, action: :advance, id: task.id), options.merge(glyph: 'awesome-check')
                        = awesome_link_to '', edit_task_path(task), glyph: 'awesome-edit', remote:true
                      = awesome_link_to '', task_path(task, expanded: 1), glyph: 'awesome-eye-open', remote:true
