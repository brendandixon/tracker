#Main
  = render 'layouts/messages'
  = render 'shared/overview'

  %table.table.story-list#StoryList
    %thead
      %tr
        = render partial: 'shared/sortable', locals: {name: 'Title', field: 'title', classes: 'span2'}
        = render partial: 'shared/sortable', locals: {name: 'Feature', field: 'feature', classes: 'span1'}
        = render partial: 'shared/sortable', locals: {name: 'Release Date', field: 'date', classes: 'span1'}
        = render partial: 'shared/sortable', locals: {name: 'References', field: 'reference', classes: 'span2'}
        %th.three.span2 Projects

    %tbody
      - if @stories.empty?
        %tr.story.expanded#Story_new{data: {empty: 1}}
          %td{colspan: 5}
            %h3.subheader= t(:none_html, scope: [:controllers, :stories])
      - else
        = render partial: 'story', collection: @stories, locals: {edited: @edited, expanded: @expanded}
