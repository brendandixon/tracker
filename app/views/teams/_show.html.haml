- remote = false if remote.nil?
- stand_alone = true if stand_alone.nil?
- team ||= @team

- if stand_alone
  .row
    .twelve.columns= team.name
  .row
    .three.columns= "Velocity: #{team.velocity}"
    .three.columns.end= "Sprint Days: #{team.iteration}"
  .row
    .twelve.columns
      = team_project_labels(team.projects)
  .row<
    .four.columns.offset-by-eight.text-right.actions
      = link_to 'Edit', edit_team_path(team)
      \|
      = link_to 'Delete', team, method: :delete, data: { confirm: "WARNING: Are you sure you want to delete this team?" }, remote:remote
      \|
      = link_to 'Back', teams_path
- else
  %td= team.name
  %td= team.velocity
  %td= team.iteration
  %td
    .projects
      = team_project_labels(team.projects)
    .command_block.on_hover<
      = glyph_link_to edit_team_path(team), glyph: 'edit', remote:remote
