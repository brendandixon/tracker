- edited ||= []
- team ||= @team
- id = team.new_record? ? 'new' : team.id

- if edited.include?(id) || team.new_record?
  %tr.team.edit-mode#Team{id: id}
    = render partial: 'edit', locals:{team:team, remote:true, stand_alone:false}

- else
  %tr.team#Team{id: id}
    = render partial: 'show', locals:{team:team, remote:true, stand_alone:false}
