- classes = cycle('odd', 'even')
- in_edit_mode ||= []
- team ||= @team

- if in_edit_mode.include?(team.id)
  %tr.team_edit#Team{id: team.id, class: classes}
    = render partial: 'edit', locals:{team:team, remote:true, stand_alone:false}

- else
  %tr.team_inline#Team{id: team.id, class: classes}
    = render partial: 'show', locals:{team:team, remote:true, stand_alone:false}
