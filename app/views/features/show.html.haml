.row
  = render 'shared/top_bar'

.row
  = render 'shared/side_navigation'

  .eleven.columns
    %h3.subheader= 'Feature'
    .row
      .twelve.columns
        = 'Title: '
        = @feature.title
    .row
      %p.three.columns
        = 'Service: '
        = @feature.service.abbreviation
      %p.three.columns
        = 'ContactUs: '
        %a{href: @feature.contact_us_link}= @feature.contact_us_number
      %p.three.columns.end
        = 'Release Date: '
        = @feature.release_date.to_date.to_s(:mm_dd_yy)
    .row
      .actions
        = link_to 'Edit', edit_feature_path(@feature)
        \|
        = link_to 'Back', features_path
