- feature ||= @feature
- remote = false if remote.nil?
- stand_alone = true if stand_alone.nil?

= content_tag stand_alone ? 'div' : 'td', stand_alone ? {} : {colspan: 2} do
  .row
    .twelve.columns
      = form_for feature, remote:remote do |f|
        - if feature.errors.any?
          .row
            .twelve.columns#error_explanation
              %h2= "#{pluralize(feature.errors.count, "error")} prohibited this feature from being saved:"
              %ul
                - feature.errors.full_messages.each do |msg|
                  %li= msg
        .row
          .seven.columns
            = f.label :name
            = f.text_field :name
        .row
          .four.columns.offset-by-eight.text-right.actions
            = f.submit 'Save'
            \|
            = link_to 'Delete', feature, method: :delete, data:{confirm: "WARNING: Are you sure you want to delete this feature?" }, remote:remote
            \|
            = link_to 'Cancel', feature.new_record? ? features_path : feature_path(feature), remote:remote
