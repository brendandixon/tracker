- feature ||= @feature
- remote = false if remote.nil?
- stand_alone = true if stand_alone.nil?

- if stand_alone
  .feature.expanded
    .row-fluid
      .span5= feature.name
      .span5= feature.category.name
    .row-fluid
      .spanb4.offset8.text-right
        = link_to 'Edit', edit_feature_path(feature), remote:remote, class: 'btn btn-small btn-flat btn-primary'
        \|
        = link_to 'Delete', feature, method: :delete, data: { confirm: "WARNING: Are you sure you want to delete this feature?" }, remote:remote, class: 'btn btn-small btn-flat btn-danger'
        \|
        = link_to 'Back', features_path, class: 'btn btn-small btn-flat btn-link'

- else
  %td= feature.name
  %td
    = feature.category.name if feature.category.present?
    .command-block.on-hover<
      = awesome_link_to '', edit_feature_path(feature), glyph: 'awesome-edit', remote:true
