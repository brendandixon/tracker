- feature ||= @feature
- remote = false if remote.nil?
- stand_alone = true if stand_alone.nil?

- if stand_alone
  .row
    .seven.columns= feature.name
    .five.columns.end= feature.name
  .row<
    .four.columns.offset-by-eight.text-right.actions
      = link_to 'Edit', edit_feature_path(feature), remote:remote
      \|
      = link_to 'Delete', feature, method: :delete, data: { confirm: "WARNING: Are you sure you want to delete this feature?" }, remote:remote
      \|
      = link_to 'Back', features_path

- else
  %td= feature.name
  %td
    = feature.name
    .command_block.on_hover<
      = glyph_link_to edit_feature_path(feature), glyph: 'edit', remote:remote
