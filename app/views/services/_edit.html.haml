- service ||= @service
- remote = false if remote.nil?
- stand_alone = true if stand_alone.nil?

= content_tag stand_alone ? 'div' : 'td', stand_alone ? {} : {colspan: 2} do
  .row
    .twelve.columns
      = form_for service, remote:remote do |f|
        - if service.errors.any?
          .row
            .twelve.columns#error_explanation
              %h2= "#{pluralize(service.errors.count, "error")} prohibited this service from being saved:"
              %ul
                - service.errors.full_messages.each do |msg|
                  %li= msg
        .row
          .seven.columns
            = f.label :name
            = f.text_field :name
          .five.columns.end
            = f.label :abbreviation
            = f.text_field :abbreviation
        .row
          .four.columns.offset-by-eight.text-right.actions
            = f.submit 'Save'
            \|
            = link_to 'Delete', service, method: :delete, data:{confirm: "WARNING: Are you sure you want to delete this service?" }, remote:remote
            \|
            = link_to 'Cancel', service.new_record? ? services_path : service_path(service), remote:remote
