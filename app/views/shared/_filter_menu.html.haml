- filters = (controller.respond_to?(:filters) && controller.filters) || []

%ul.dropdown#FilterMenu
  - if filters.present?
    - filters.each do |filter|
      %li{class: @filter.id == filter.id ? 'active' : nil}
        = link_to filter.name, url_for(controller: controller.controller_name, action: :index, filter: filter.to_hash(:id)), remote: true
    %li.divider
  %li= link_to t(:new_html, scope: [:filter]), url_for(controller: controller.controller_name, action: :index, reset: true, show: true), remote: true
  - if @filter.present? && !@filter.new_record?
    %li= link_to t(:edit_html, scope: [:filter]), '#', data: {filter_toggle: true}
  %li= link_to t(:clear_html, scope: [:filter]), url_for(controller: controller.controller_name, action: :index, reset: true), remote: true
