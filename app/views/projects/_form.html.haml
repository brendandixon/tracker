= form_for @project do |f|
  - if @project.errors.any?
    #error_explanation
      %h2= "#{pluralize(@project.errors.count, "error")} prohibited this project from being saved:"
      %ul
        - @project.errors.full_messages.each do |msg|
          %li= msg

  .row
    .four.columns.end
      = f.label :name
      = f.text_field :name
  .row
    - Service.active.each_slice(4) do |services|
      .row
        = render partial: 'service', collection: services, locals: {last: services.length, length: 4, edit: true}
  .row
    .four.columns.offset-by-eight.text-right.actions
      = f.submit 'Save'
      \|
      = link_to 'Delete', @project, method: :delete, data: { confirm: "WARNING: Are you sure you want to delete this project?" }
      \|
      = link_to 'Cancel', :back
