- edit ||= false
- classes = []
- classes << ' disabled' unless edit || @project.features.include?(feature)
- classes << ' end' if last < length

.three.columns.features{class: classes}
  - if edit
    = check_box_tag 'project[features][]', feature.id, @project.features.include?(feature), id: "project_feature_#{feature.id}"
    = label_tag "project_feature_#{feature.id}", feature.name, class: 'inline_label'
  - else
    = feature.name
