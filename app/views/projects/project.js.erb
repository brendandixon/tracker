<%
content = escape_javascript(render(partial: @project, locals: {in_edit_mode: @in_edit_mode}))
id = @project.new_record? ? 'new' : @project.id
%>
<%= render template: 'shared/reset_transients' %>
$('#Project_new').remove();
if ($('#Project_<%= id %>').length <= 0) {
  if ($('#ProjectList > tbody > tr').length <= 0) {
    $('#ProjectList > tbody').html('<%= content %>');
  } else {
    $('#ProjectList > tbody > tr').first().before('<%= content %>');
  }
} else {
  $('#Project_<%= id%>').replaceWith('<%= content %>');
}
$('#Main tr:nth-child(even)').removeClass('odd').addClass('even');
$('#Main tr:nth-child(odd)').removeClass('even').addClass('odd');
<% if @was_changed.include?(id) %>
$('#Project_<%= id%>').effect('highlight',{duration: 750});
<% end %>
<%= render template: 'shared/notice' if flash.present? && flash[:notice].present? %>
