- open = "<span class='reference-type-value'>"
- close = "</span>"
- reference_type ||= @reference_type
- remote = false if remote.nil?
- stand_alone = true if stand_alone.nil?

- if stand_alone
  .reference-type.expanded
    .row-fluid
      .span5= reference_type.name
      .span5= reference_type.highlight_url_pattern(open, close).html_safe
    .row-fluid
      .spanb4.offset8.text-right
        = link_to 'Edit', edit_reference_type_path(reference_type), remote:remote, class: 'btn btn-small btn-flat btn-primary'
        \|
        = link_to 'Delete', reference_type, method: :delete, data: { confirm: "WARNING: Are you sure you want to delete this reference type?" }, remote:remote, class: 'btn btn-small btn-flat btn-danger'
        \|
        = link_to 'Back', reference_types_path, class: 'btn btn-small btn-flat btn-link'

- else
  %td= reference_type.name
  %td
    = reference_type.highlight_url_pattern(open, close).html_safe
    .command-block.on-hover<
      = awesome_link_to '', edit_reference_type_path(reference_type), glyph: 'awesome-edit', remote:true
